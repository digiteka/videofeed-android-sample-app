<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<com.digiteka.videofeed.ui.carousel.VideoFeedCarousel
		android:id="@+id/videoFeedCarousel1"
		android:layout_width="match_parent"
		android:layout_height="@dimen/carousel_height"
		app:layout_constraintBottom_toTopOf="@id/videoFeedCarousel2"
		app:layout_constraintTop_toTopOf="parent" />

	<com.digiteka.videofeed.ui.carousel.VideoFeedCarousel
		android:id="@+id/videoFeedCarousel2"
		android:layout_width="match_parent"
		android:layout_height="@dimen/carousel_height"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintTop_toBottomOf="@id/videoFeedCarousel1" />

</androidx.constraintlayout.widget.ConstraintLayout>